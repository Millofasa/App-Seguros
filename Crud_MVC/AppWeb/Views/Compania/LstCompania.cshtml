@model IEnumerable<Entidades.Compania>

@{
    ViewBag.Title = "LstCompania";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>Administrar Compañias y Productos</h4>
<div id="tabs">
    <ul>
        <li><a href="#tabs-1">Compañias</a></li>
        <li><a href="#tabs-2">Productos</a></li>
        
    </ul>
    <div id="tabs-1">
        <h2>Compañias</h2>
        <p>
            @Html.ActionLink("Agregar Nueva Compañia", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdCompania)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalProductos)
                </th>
                <th></th>
            </tr>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdCompania)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalProductos)
                        </td>
                        <td>
                            @Html.ActionLink("Modificar ", "Edit", new { id = item.IdCompania }) |
                            @Html.ActionLink("Inactivar Compañia ", "Inactivar", new { id = item.IdCompania }) |
                            @Html.ActionLink("Ver Productos", "LstProductosByCompania", "Producto", new { IdCompania = item.IdCompania }, null)
                        </td>
                    </tr>
                }
            }


        </table>
    </div>
    <div id="tabs-2">
        @{Html.RenderAction("CreateProduct", "Producto");}
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Seguros/Producto.js"></script>
    <script src="~/Scripts/Seguros/Compania.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
}
